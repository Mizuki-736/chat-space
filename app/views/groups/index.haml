%body
  %div.wrapper
    %div.menu
      %div.menu__left
        %div.menu__left--items
          %p
            = current_user.name
          %ul
            %li
              = link_to new_group_path do
                = fa_icon 'pencil-square-o', class: 'icon'
            %li
              = link_to edit_user_path(current_user) do
                = fa_icon 'cog', class: 'icon'
      %div.menu__right
        %div.group__display
          %div.group__display--name
            %h2 sample
            %ul
              %li Members:
              %li seo
              %li neko
          %a.edit
            %div.edit__button
              -# = link_to 'Edit', edit_group_path(@group.id) do
              -#   .div.test
      = render 'groups/groupview'
    %div.content__messages
      %div.message
        %div.message__info
          %p seo
          %ul
            %li 2017-05-18
            %li 13:19:51 UTC
        %p.text はじめまして
      %div.message
        %div.message__info
          %p seo
          %ul
            %li 2017-05-18
            %li 13:20:00 UTC
        %p.text よろしくお願いします
    %div.form
      %div.textbox
        %input{placeholder: :"type a message"}
        %label.upload-label{for: "upload-icon"}
          %i.fa.fa-picture-o
      %div.send__button
        %p Send
